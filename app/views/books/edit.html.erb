<h2>Editing Book</h2>
<%= form_with model: @book, url: book_path(@book), method: :patch, local: true do |f| %>
<label>Title</label>
<%= f.text_field :title %>

<label>Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>
<tr>
<th><%= link_to "show", book_path %></th>
<th>|</th>
<th><%= link_to "back", request.referer %></th>
</tr>

<% end %>