<div>
  <%= flash[:notice] %>
</div>
<main>
  <p id="notice"></p>
 <div class="container">
  <div class="row">
   <div class="col-md-3">
　　　<%= render "list", book: @book, user: @user %>
　　</div>

　   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
      <tr>
      <td><%= image_tag @book.user.get_profile_image(100, 100) %>
          <%= link_to @user.name, user_path %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
        <%= link_to "edit", edit_book_path(@book) %>
        <% end %></td>
      <td><% if @book.user == current_user %>
    　　<%= link_to "destroy", book_path(@book), method: :delete %>
    　　<% end %></td>
      </tr>
      </tbody>
    </table>
   </div>
  </div>
 </div>
</main>
